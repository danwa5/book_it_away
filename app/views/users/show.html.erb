<% provide(:title, @user.first_name + " " + @user.last_name) %>
<h1>My Profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>

      <div class="control-group">
        <%= f.label :username, nil, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :username, {disabled: true} %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :last_name, nil, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :last_name, {disabled: true} %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :first_name, nil, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :first_name, {disabled: true} %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :email, nil, class: "control-label" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.text_field :email, {disabled: true} %>
          </div>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :admin, nil, class: "control-label" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-wrench"></i></span>
            <%= text_field_tag "admin", @user.admin, {disabled: true} %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
