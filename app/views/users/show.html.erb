<% provide(:title, @user.name) %>

<div class="blog-post">
  <div class="page-header">
    <h2>My Profile</h2>
  </div>

  <div class="row">
    <%= form_for(@user, html: { class:"form-horizontal" }) do |f| %>

      <div class="form-group">
        <%= f.label :username, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :last_name, class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :first_name, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :first_name, class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            </div>
            <%= f.text_field :email, class: "form-control", disabled: true %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :admin, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            </div>
            <%= text_field_tag "admin", @user.admin, class: "form-control", disabled: true %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
