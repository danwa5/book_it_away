
<%# @reviews.each do |review| %>
  Rating: <%= review.rating %><br/>
  Comments: <%= review.comments %><br/>
  Likes: <%= link_to review.likes, author_book_review_like_path(@author, @book, review.id), method:"put", class:"btn btn-success btn-mini" %> /
  Dislikes: <%= link_to review.dislikes, author_book_review_dislike_path(@author, @book, review.id), method:"put", class:"btn btn-danger btn-mini" %><br/>
  Reviewed on <%= date_format(review.created_at) %> by <%= review.user.name %>

  <% if current_user == review.user %>
    (<%= link_to "Edit", edit_author_book_review_path(@author, @book, review) %>
    <% if current_user.admin? %>
      | <%= link_to "Delete", ([@author, @book, review]), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>)
  <% end %>
  <br/><br/>
<%# end %>
  
