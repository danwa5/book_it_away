<% provide(:title, 'My Posts') %>

<div class="blog-post">
  <div class="page-header">
    <h2>My Posts</h2>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr class="active">
              <th>Title</th>
              <th><strong>Status</strong></th>
              <th><strong>Posted At</strong></th>
              <th class="center"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
            </tr>
          </thead>
          <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, user_post_path(current_user, post) %></td>
            <td><%= post.status %></td>
            <td><%= post.posted_at %></td>
            <td class="center"><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, user_post_path(current_user, post), method: :delete, data: { confirm: "You sure?" }, class: 'delete-icon' %></td>
          </tr>
        <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>