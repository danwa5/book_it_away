<div class="row">
  <%= form_for([@user, @post], html: { class:"form-horizontal" }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :title, nil, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :title, maxlength: 255, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, nil, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :body, rows: 15, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :status, nil, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.select :status, post_status, {}, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :posted_at, nil, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.date_select :posted_at, { order: [:month, :day, :year], prompt: true, use_short_month: true, start_year: DateTime.now.year, end_year: DateTime.now.year+1, default: Time.now }, { class: "form-control", style: "float: left; width: 90px;" } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-5 col-sm-offset-3">
        <%= f.submit button_label, class: "btn btn-primary" %>
        <%= link_to "Cancel", cancel_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>