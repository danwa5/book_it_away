<div class="row">
  <%= form_for(@category, html: { class:"form-horizontal" }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :name, nil, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category Name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6 col-sm-offset-3">
        <%= f.submit button_label, class: "btn btn-primary" %>
        <%= link_to "Cancel", categories_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>