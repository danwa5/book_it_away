<div class="row">
  <div class="span6 offset3">
    <%= form_for(@subject, html: {class:"form-inline"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row-fluid">
      	<%= f.text_field :name, {class:"input-large", placeholder:"Type subject here"} %>
      	<%= f.submit button_label, class: "btn btn-primary" %>
      	<%= link_to "Cancel", subjects_path, class: "btn btn-primary" %>
			</div>
    <% end %>
  </div>
</div>

